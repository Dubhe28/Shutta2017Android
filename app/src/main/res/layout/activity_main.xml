<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.kcci6.shuttaproject.mainPackage.StartMenuActivity">

    <fragment
        android:id="@+id/frgPlayerInfo1"
        android:name="com.example.kcci6.shuttaproject.playerPackage.PlayerInfoFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/frgPlayer2Card1"
            android:name="com.example.kcci6.shuttaproject.playerPackage.PlayerCardFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/frgPlayer2Card2"
            android:name="com.example.kcci6.shuttaproject.playerPackage.PlayerCardFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/frgPlayer1Card1"
            android:name="com.example.kcci6.shuttaproject.playerPackage.PlayerCardFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/frgPlayer1Card2"
            android:name="com.example.kcci6.shuttaproject.playerPackage.PlayerCardFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <fragment
        android:id="@+id/frgPlayerInfo2"
        android:name="com.example.kcci6.shuttaproject.playerPackage.PlayerInfoFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
